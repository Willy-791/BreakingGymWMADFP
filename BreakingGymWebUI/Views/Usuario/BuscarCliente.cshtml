@model List<BreakingGymWebEN.ClienteBusquedaEN>
@{
    ViewData["Title"] = "Buscar Cliente";
    Layout = "~/Views/Shared/Ladmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-search"></i> Buscar Cliente</h4>
            <a asp-action="MostrarUsuario" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
        </div>
        <div class="card-body">
            <!-- Formulario de búsqueda -->
            <form asp-action="BuscarCliente" method="get" class="row g-3 mb-3">
                <div class="col-md-4">
                    <input type="text" name="celular" class="form-control" placeholder="Buscar por celular..." />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>

            <table class="table table-hover table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Celular</th>
                        <th>Membresía</th>
                        <th>Estado Membresía</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Id</td>
                                <td>@cliente.Nombre</td>
                                <td>@cliente.Apellido</td>
                                <td>@cliente.Celular</td>
                                <td>@cliente.Membresia</td>
                                <td>@cliente.EstadoMembresia</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                No se encontraron resultados.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .card {
        animation: titleEntry 2s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

    @@keyframes titleEntry {
        0% {
            transform: translateY(-100px) scale(0.5); /* Viene desde arriba, pequeño */
            opacity: 0; /* Transparente */
        }

        100% {
            transform: translateY(0) scale(1); /* Posición normal, tamaño normal */
            opacity: 1; /* Completamente visible */
        }
    }

</style>