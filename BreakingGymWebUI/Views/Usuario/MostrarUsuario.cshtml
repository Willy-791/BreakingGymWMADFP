@model List<BreakingGymWebEN.UsuarioEN>
@{
    ViewData["Title"] = "MostrarUsuario";
    Layout = "~/Views/Shared/Ladmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-people-fill"></i> Usuarios Registrados</h4>
            <div>
                <a asp-action="BuscarCliente" class="btn btn-success btn-sm">
                    <i class="bi bi-search"></i> Lista de Clientes
                </a>
            </div>
        </div>

        <div class="card-body">
            <p class="des">
                En esta sección puedes gestionar la información de los usuarios del gimnasio. puedes consultar datos y actualizar información cuando sea necesario
            </p>
            <!-- Tabla principal de usuarios -->
            <table class=" table table-hover table-bordered table-striped align-middle">
                <thead class="TC tN">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Id Rol</th>
                        <th scope="col">Nombre_Rol</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Celular</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Contraseña</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.IdRol</td>
								<td>@user.Nombre_Rol</td>
                                <td>@user.Nombre</td>
                                <td>@user.Apellido</td>
                                <td>@user.Celular</td>
                                <td>@user.Cuenta</td>
                                <td>@user.Contrasenia</td>
                                <td class="text-center">
                                    <a asp-action="ModificarUsuario" asp-route-id="@user.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> Modificar
                                    </a>
                                    <a asp-action="EliminarUsuario" asp-route-id="@user.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash-fill"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">
                                No hay Usuarios registrados.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        @* Éxitos *@
      
        @if (TempData["ExitoModificar"] != null)
        {
                        <text>
                            Swal.fire({
                                icon: "success",
                                title: "Éxito",
                                   text: "@Html.Raw(TempData["ExitoModificar"])"
                            });
                        </text>
        }
        @if (TempData["ExitoEliminar"] != null)
        {
                        <text>
                            Swal.fire({
                                icon: "success",
                                title: "Éxito",
                                text: "@TempData["ExitoEliminar"]"
                            });
                        </text>
        }
         @if (TempData["ErrorEliminar"] != null)
        {
                            <text>
                                Swal.fire({
                                    icon: "error",
                                    title: "Error",
                                              text: "@Html.Raw(TempData["ErrorEliminar"])"
                                });
                            </text>
        }

        @* Errores (ejemplo duplicado) *@
        @if (TempData["ErrorDuplicadoModificado"] != null)
        {
                        <text>
                            Swal.fire({
                                icon: "error",
                                title: "Error",
                                    text: "@TempData["ErrorDuplicadoModificado"]"
                            });
                        </text>
        }
    });
</script>

<style>
    .card {
        animation: titleEntry 2s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

    @@keyframes titleEntry {
        0% {
            transform: translateY(-100px) scale(0.5); /* Viene desde arriba, pequeño */
            opacity: 0; /* Transparente */
        }

        100% {
            transform: translateY(0) scale(1); /* Posición normal, tamaño normal */
            opacity: 1; /* Completamente visible */
        }
    }

</style>