@model BreakingGymWebEN.UsuarioEN

@{
    ViewData["Title"] = "GuardarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height:100vh;">
    <div class="col-lg-7">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header colorw">
                <h3 class="text-center font-weight-light my-4">Registrate</h3>
            </div>
            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                <form asp-action="GuardarUsuario" asp-controller="Usuario" method="post" style="width:100%; max-width:500px;">
                    <!-- Campo oculto para IdRol -->
                    <input asp-for="IdRol" type="hidden" value="2" />

                    <div class="row mb-3">
                        <div class="col-12 mb-3">
                            <div class="form-floating w-100">
                                <input asp-for="Nombre" class="form-control" id="NombreUsuario" placeholder="Ingresa un Nombre" required />
                                <label for="Nombre" class="w-100 text-start">Nombre</label>
                            </div>
                        </div>

                        <div class="col-12 mb-3">
                            <div class="form-floating w-100">
                                <input asp-for="Apellido" class="form-control" id="ApellidoUsuario" placeholder="Ingrese un Apellido" required />
                                <label for="Apellido" class="w-100 text-start">Apellido</label>
                            </div>
                        </div>

                        <div class="col-12 mb-3">
                            <div class="form-floating w-100">
                                <input asp-for="Celular" class="form-control" id="Cel" type="tel" pattern="[0-9]{8}" placeholder="70901830" required />
                                <label for="Celular" class="w-100 text-start">Celular</label>
                            </div>
                        </div>

                        <div class="col-12 mb-3">
                            <div class="form-floating w-100">
                                <input asp-for="Cuenta" class="form-control" id="Cuenta" type="email" placeholder="name@example.com" required />
                                <label for="Cuenta" class="w-100 text-start">Correo</label>
                            </div>
                        </div>

                        <div class="col-12 mb-3">
                            <div class="form-floating w-100">
                                <input asp-for="Contrasenia" class="form-control" id="Contrasenia" type="password" placeholder="Ingresa una Contraseña" required />
                                <label for="Contrasenia" class="w-100 text-start">Contraseña</label>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 mb-0 d-grid">
                        <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: url('/FT_DeSobreNosotros/gym-equipment.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
    }

    /* Card */
    .card {
        background-color: rgba(0, 0, 0, 0.6) !important;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-radius: 50px;
        padding: 30px;
        color: white;
        border: 2px solid #FFD700 !important;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.8), 0 0 30px rgba(255, 215, 0, 0.6), 0 0 45px rgba(255, 215, 0, 0.5) !important;
        animation: cardEntrance 1s ease-out 0.1s forwards;
    }

    /* Card Header */
    .card-header h3 {
        margin: 0;
        font-family: 'Lobster', cursive;
        color: #fff;
        text-shadow: 0 2px 6px rgba(0,0,0,0.6);
    }

    /* Form Controls */
    .form-control {
        border-radius: 12px;
        background: rgba(255,255,255,0.2);
        border: 2px solid #FFD700;
        color: #000;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #FFD700;
            box-shadow: 0 0 30px rgba(255, 215, 0, 0.6);
            background: rgba(255, 255, 255, 0.85);
            color: #000;
        }

    label {
        color: #000;
        text-shadow: 0 1px 2px rgba(0,0,0,0.2);
    }

    /* Botón */
    .btn-primary {
        position: relative;
        overflow: hidden;
        background: #FFD700;
        border: 2px solid #FFD700;
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 600;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 0 30px rgba(255, 215, 0, 0.6);
    }

        .btn-primary:hover {
            transform: scale(1.05);
            box-shadow: 0 0 30px rgba(255, 215, 0, 0.6);
        }

        .btn-primary:focus {
            outline: none !important;
            border: 2px solid #FFD700 !important;
            box-shadow: 0 0 15px rgba(255, 215, 0, 0.6), 0 0 35px rgba(255, 215, 0, 0.6) !important;
        }

        .btn-primary:active {
            transform: scale(0.98);
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.1), 0 0 40px rgba(255, 215, 0, 0.6) !important;
        }

    /* Animaciones */

    @@keyframes cardEntrance {
        0% {
            opacity: 0;
            transform: scale(0.9) translateY(30px);
        }

        100% {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            @* Mostrar mensaje de éxito *@
            @if (TempData["ExitoGuardar"] != null)
            {
                    <text>
                        Swal.fire({
                            icon: "success",
                            title: "Éxito",
                            text: "@TempData["ExitoGuardar"]"
                        });
                    </text>
            }

            @* Mostrar mensaje de error duplicado *@
            @if (TempData["ErrorDuplicado"] != null)
            {
                    <text>
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: "@TempData["ErrorDuplicado"]"
                        });
                    </text>
            }
        });
    </script>
}
