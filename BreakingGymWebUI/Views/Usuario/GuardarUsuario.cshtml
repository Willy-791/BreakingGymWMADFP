@model BreakingGymWebEN.UsuarioEN

@{
    ViewData["Title"] = "GuardarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Registrate Chabal</h3></div>
                 <div class="card-body">
                    <form asp-action="GuardarUsuario" asp-controller="Usuario" method="post">
                        <!-- Campo oculto para IdRol -->
                        <input asp-for="IdRol" type="hidden" value="2" />

                        <div class="row mb-3">
                            <div class="col-12 mb-3">
                                <div class="form-floating w-100">
                                    <input asp-for="Nombre" class="form-control" id="NombreUsuario" placeholder="Ingresa un Nombre" required />
                                    <label for="Nombre" class="w-100 text-start">Nombre</label>
                                </div>
                            </div>

                            <div class="col-12  mb-3">
                                <div class="form-floating w-100">
                                    <input asp-for="Apellido" class="form-control" id="ApellidoUsuario" placeholder="Ingrese un Apellido" required />
                                    <label for="Apellido" class="w-100 text-start">Apellido</label>
                                </div>
                            </div>

                            <div class="col-12  mb-3">
                                <div class="form-floating w-100">
                                    <input asp-for="Celular" class="form-control" id="Cel" type="tel" pattern="[0-9]{8}" placeholder="70901830" required />
                                    <label for="Celular" class="w-100 text-start">Celular</label>
                                </div>
                            </div>

                            <div class="col-12 mb-3">
                                <div class="form-floating w-100">
                                    <input asp-for="Cuenta" class="form-control" id="Cuenta" type="email" placeholder="name@example.com" required />
                                    <label for="Cuenta" class="w-100 text-start">Correo</label>
                                </div>
                            </div>

                            <div class="col-12 mb-3">
                                <div class="form-floating w-100">
                                    <input asp-for="Contrasenia" class="form-control" id="Contrasenia" type="password" placeholder="Ingresa una Contraseña" required />
                                    <label for="Contrasenia" class="w-100 text-start">Contraseña</label>
                                </div>
                            </div>
                        </div>

                        @if (TempData["MensajeExito"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                @TempData["MensajeExito"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }  
                            <div class="mt-4 mb-0">
                                <div class="d-grid">
                                    @TempData["MensajeExito"]
                                <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                                </div>
                            </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    
   
  
    body {
       background: rgba(211, 211, 211, 0.8); 
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Poppins', sans-serif;

    }

    /*  formulario  */
    .card {
   background-color: rgba(0, 0, 0, 0.6) !important;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 50px;
    padding: 30px;
    color: white;
    margin-top: 20px;
    border: 2px solid #FFD700 !important;
   
     box-shadow: 
        0 0 15px rgba(255, 215, 0, 0.8),
        0 0 30px rgba(255, 215, 0, 0.6),
        0 0 45px rgba(255, 215, 0, 0.5) !important;
    
    /*  animación  */
    animation: cardEntrance 1s ease-out 0.1s forwards;
   
    
}

   
    
    .card-header h3 {
        margin: 0;
        font-family: 'Lobster', cursive;
        color: #fff; 
        text-shadow: 0 2px 6px rgba(0,0,0,0.6);
    }
    .form-control {
    border-radius: 12px;
     background: rgba(255,255,255,0.2); 
    border: 2px solid #FFD700; 
    color: #000; 
    transition: all 0.3s ease;
}



.form-control:focus {
    border-color: ##FFD700; 
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.6);
    background: rgba(255, 255, 255, 0.85); 
    color: #000;
}

/*  Labels  */
label {
    color: #000; 
    text-shadow: 0 1px 2px rgba(0,0,0,0.2);
    transition: color 0.3s ease;
}


    /*  Botón */
    .btn-primary {
        position: relative;
        overflow: hidden;
        background: #FFD700; 
        border: 2px solid #FFD700; 
        border-radius: 12px;
        padding: 10px 20px;
        font-weight: 600;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow:0 0 30px rgba(255, 215, 0, 0.6); 
    }

    .btn-primary:hover {
     background-color: #FFD700; 
    color: white; 
    transform: scale(1.05); 
    border: 2px solid #FFD700;
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.6);    
}
 .btn-primary:focus {
    outline: none !important;
            border: 2px solid #FFD700 !important;
            box-shadow: 0 0 15px rgba(255, 215, 0, 0.6), 
                0 0 35px rgba(255, 215, 0, 0.6) !important; 
}

.btn-primary:active {
    background-color: #FFD700 !important; 
    color: white;
    transform: scale(0.98); 
    border: 2px solid #FFD700 !important; 
    box-shadow: 0 0 20px rgba(255, 215, 0, 0.1) 
                0 0 40px rgba(255, 215, 0, 0.6) !important; 
}   




.btn-primary::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        border: 2px solid #FFD700;
        box-shadow: 0 0 30px rgba(255, 215, 0, 0.6);
         background: linear-gradient(160deg, transparent, rgba(255,255,255,0.3), transparent);
        transform: rotate(30deg);
        animation: shine 2s infinite;
    }
    @@keyframes shine {
        0% { transform: translateX(-100%) rotate(30deg); }
    100% { transform: translateX(100%) rotate(30deg); }

    }

   
    .alert-success {
        background: rgba(255,99,71,0.7);
        color: #fff;
        border: none;
        border-radius: 12px;
        text-align: center;
        font-weight: 500;
    }

    .btn-close {
        filter: invert(1);
    }
    @@keyframes cardEntrance {
    0% {
        opacity: 0;
        transform: scale(0.9) translateY(30px);
    }
    100% {
        opacity: 1;
        transform: scale(1) translateY(0);
    }
}
   

   
    @@media(max-width: 768px) {
        .card {
            margin: 20px;
            padding: 1.5rem;
        }
    }


</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Usuario.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            @* Éxitos *@
                    @if (TempData["ExitoGuardar"] != null)
        {
                                <text>
                                    Swal.fire({
                                        icon: "success",
                                        title: "Éxito",
                                        text: "@TempData["ExitoGuardar"]"
                                    });
                                </text>
        }



            @* Errores (ejemplo duplicado) *@
                  @if (TempData["ErrorDuplicado"] != null)
        {
                                <text>
                                    Swal.fire({
                                        icon: "error",
                                        title: "Error",
                                        text: "@TempData["ErrorDuplicado"]"
                                    });
                                </text>
        }
        });
    </script>

}