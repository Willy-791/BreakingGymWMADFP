@model BreakingGymWebEN.UsuarioEN

@{
    ViewData["Title"] = "GuardarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Registrate Chabal</h3></div>
                <div class="card-body">
                    <form asp-action="GuardarUsuario" asp-controller="Usuario" method="post" id="GuardarUsuarioForm">
                        
                        <!-- Campo oculto para IdRol -->
                        <input asp-for="IdRol" type="hidden" value="2" />
                        <input asp-for="Nombre_Rol" type="hidden"  />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="Nombre" class="form-control" id="Nombre" placeholder="Ingresa un Nombre" required />
                                    <label for="Nombre">Nombre</label>
                                 
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Apellido" class="form-control" id="Apellido" placeholder="Ingrese un Apellido" required />
                                    <label for="Apellido">Apellido</label>
                                  
                                </div>
                            </div>
                            <div class="col-md-6 mt-3">
                                <div class="form-floating">
                                    <input asp-for="Celular" class="form-control" id="Celular" type="tel" pattern="[0-9]{8}" placeholder="70901830" required />
                                    <label for="Celular">Celular</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Cuenta" class="form-control" id="Cuenta" type="email" placeholder="name@example.com" required />
                            <label for="Cuenta">Cuenta</label>
                          
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="Contrasenia" class="form-control" id="Contraseña" type="password" placeholder="Ingresa una Contraseña" required />
                                    <label for="Contrasenia">Contrasenia</label>
                                    
                                </div>
                            </div>

                        </div>
                        @if (TempData["MensajeExito"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                @TempData["MensajeExito"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }  
                            <div class="mt-4 mb-0">
                                <div class="d-grid">
                                    @TempData["MensajeExito"]
                                    <button type="submit" class="btn btn-primary btn-block">Registrar</button>
                                </div>
                            </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Usuario.js"></script>

    <script>
        @if (TempData["MensajeExito"] != null)
        {
                <text>
                    Swal.fire({
                        icon: "success",
                        title: "Éxito",
                        text: "@TempData["MensajeExito"]"
                    });
                </text>
        }

        @if (TempData["ErrorDuplicado"] != null)
        {
                <text>
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "@TempData["ErrorDuplicado"]"
                    });
                </text>
        }
    </script>
}

