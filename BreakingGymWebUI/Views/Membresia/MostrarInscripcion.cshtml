@model BreakingGymWebEN.InscripcionEN
@{
    ViewData["Title"] = "MostrarInscripcion";
    Layout = "~/Views/Shared/Lusuario.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center">
                    <h4><i class="bi bi-trash-fill"></i> Solicitud de Inscripción</h4>
                </div>
                <div class="card-body p-4 text-center">
                    <p class="fs-5">¿Desea solicitar la siguiente Membresia?</p>

                    <ul class="list-group mb-4">
                        <li class="list-group-item"><strong>Id:</strong> @Model.Id</li>
                        <li class="list-group-item"><strong>Id Usuario:</strong> @Model.IdUsuario</li>
                        <li class="list-group-item"><strong>Id Membresia:</strong> @Model.IdMembresia</li>
                        <li class="list-group-item"><strong>Id estado:</strong> @Model.IdEstado</li>
                        <li class="list-group-item"><strong>Fecha Inscripcion:</strong> @Model.FechaInscripcion</li>
                        <li class="list-group-item"><strong>Fecha Vencimiento</strong> @Model.FechaVencimiento</li>

                    </ul>

                    <form id="EliminarInscripcionForm">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Cancelar Inscripción
                            </button>
                            <a asp-action="MostrarMembresia" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Aceptar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

