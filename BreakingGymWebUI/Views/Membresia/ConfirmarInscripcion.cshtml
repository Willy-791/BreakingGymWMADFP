@model BreakingGymWebEN.InscripcionEN
@{
    ViewData["Title"] = "ConfirmarInscripcion";
    Layout = "~/Views/Shared/Lusuario.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h4><i class="bi bi-person-check-fill"></i> Confirmar Inscripción</h4>
                </div>
                <div class="card-body p-4 text-center">
                    <p class="fs-5">¿Deseas confirmar tu inscripción a esta membresía?</p>

                    <ul class="list-group mb-4 text-start">
                        <li class="list-group-item"><strong>ID Usuario:</strong> @Model.IdUsuario</li>
                        <li class="list-group-item"><strong>ID Membresía:</strong> @Model.IdMembresia</li>
                        <li class="list-group-item"><strong>ID Estado:</strong> @Model.IdEstado</li>
                        <li class="list-group-item"><strong>Fecha Inscripción:</strong> @Model.FechaInscripcion?.ToString("dd/MM/yyyy")</li>
                        <li class="list-group-item"><strong>Fecha Vencimiento:</strong> @Model.FechaVencimiento?.ToString("dd/MM/yyyy")</li>
                    </ul>

                    <form asp-action="GuardarInscripcionConfirmada" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="IdUsuario" />
                        <input type="hidden" asp-for="IdMembresia" />
                        <input type="hidden" asp-for="IdEstado" />
                        <input type="hidden" asp-for="FechaInscripcion" />
                        <input type="hidden" asp-for="FechaVencimiento" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="MostrarMembresiaU" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-success">Confirmar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

