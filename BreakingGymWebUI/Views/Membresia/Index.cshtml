@model IEnumerable<BreakingGymWebEN.MembresiaEN>

@{
    ViewData["Title"] = "Planes de Membresía";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Elige tu plan</h2>
    <p class="text-center">Actualice a funciones premium para mejorar su productividad y optimizar su flujo de trabajo. ¡Seleccione el plan que mejor se adapte a sus necesidades!</p>

    <div class="row justify-content-center">
        <!-- Free Plan -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-header">
                    Free
                </div>
                <div class="card-body">
                    <h3>$0 <small>/mo</small></h3>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>✔ Almacenamiento limitado</li>
                        <li>✔ Soporte básico</li>
                        <li>✔ Plantillas gratis</li>
                        <li>✔ Soporte por correo</li>
                        <li>✔ No requiere tarjeta</li>
                    </ul>
                    <a href="#" class="btn btn-outline-dark">Choose this plan</a>
                </div>
            </div>
        </div>

        <!-- Pro Plan -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-header">
                    Pro
                </div>
                <div class="card-body">
                    <h3>$30 <small>/mo</small></h3>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>✔ Más almacenamiento</li>
                        <li>✔ Soporte prioritario</li>
                        <li>✔ Plantillas exclusivas</li>
                        <li>✔ Herramientas de colaboración</li>
                        <li>✔ Cancela cuando quieras</li>
                    </ul>
                    <a href="#" class="btn btn-dark">Choose this plan</a>
                </div>
            </div>
        </div>

        <!-- Premium Plan -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-header">
                    Premium
                </div>
                <div class="card-body">
                    <h3>$45 <small>/mo</small></h3>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>✔ Almacenamiento ilimitado</li>
                        <li>✔ Soporte 24/7</li>
                        <li>✔ Plantillas premium</li>
                        <li>✔ Integraciones avanzadas</li>
                    </ul>
                    <a href="#" class="btn btn-dark">Choose this plan</a>
                </div>
            </div>
        </div>
    </div>
</div>


