@{
    ViewData["Title"] = "SobreNosotros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SobreNosotros</h1>
<p>
    Bienvenido a Breaking GYM. Aquí contamos un poco sobre nuestra historia, servicios y logros.
</p>

<!-- INICIO DEL ÁLBUM -->
<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h2 class="fw-light">Nuestro Álbum</h2>
            <p class="lead text-muted">
                Una breve colección de imágenes sobre nuestro gimnasio, eventos y actividades.
            </p>
        </div>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            <!-- Tarjeta 1 -->
            <div class="col">
                <div class="card shadow-sm">
                    <img src="~/images/imagen1.jpg" class="card-img-top" alt="Imagen 1" />
                    <div class="card-body">
                        <p class="card-text">Descripción de la tarjeta 1.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 2 -->
            <div class="col">
                <div class="card shadow-sm">
                    <img src="~/images/imagen2.jpg" class="card-img-top" alt="Imagen 2" />
                    <div class="card-body">
                        <p class="card-text">Descripción de la tarjeta 2.</p>
                    </div>
                </div>
            </div>

            <!-- Tarjeta 3 -->
            <div class="col">
                <div class="card shadow-sm">
                    <img src="~/images/imagen3.jpg" class="card-img-top" alt="Imagen 3" />
                    <div class="card-body">
                        <p class="card-text">Descripción de la tarjeta 3.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
