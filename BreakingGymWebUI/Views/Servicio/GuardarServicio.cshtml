@model BreakingGymWebEN.ServicioEN
@{
    ViewData["Title"] = "GuardarServicio";
    Layout = "~/Views/Shared/Ladmin.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Registrar Servicios</h3></div>
                <div class="card-body">
                    <form asp-action="GuardarServicio" method="post" id="GuardarServicioForm">
                        <div class="mb-3">
                            <input asp-for="Nombre" class="form-control" id="Nombre" placeholder="ServicioNombre" required />

                        </div>
                        <div class="mb-3">
                            <input asp-for="Descripcion" class="form-control" id="Descripcion" placeholder="ServicioDescripcion" required />

                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card{
    background-color: aquamarine;
    animation: titleEntry 2s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}
@@keyframes titleEntry {
    0% {
        transform: translateY(-100px) scale(0.5); /* Viene desde arriba, pequeño */
        opacity: 0; /* Transparente */
    }

    100% {
        transform: translateY(0) scale(1); /* Posición normal, tamaño normal */
        opacity: 1; /* Completamente visible */
    }
}

</style>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Servicio.js"></script>
}