@model BreakingGymWebEN.ServicioEN
@{
    ViewData["Title"] = "ModificarServicio";
    Layout = "~/Views/Shared/Ladmin.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-white text-center">
                    <h4><i class="bi bi-pencil-square"></i> Modificar Servicio</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ModificarServicio" method="post" id="ModificarServicioForm">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="ServicioNombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold"></label>
                            <input asp-for="Descripcion" class="form-control" placeholder="ServicioDescripcion" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Modificar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card{
    background-color: aquamarine;
    animation: titleEntry 2s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}
@@keyframes titleEntry {
    0% {
        transform: translateY(-100px) scale(0.5); /* Viene desde arriba, pequeño */
        opacity: 0; /* Transparente */
    }

    100% {
        transform: translateY(0) scale(1); /* Posición normal, tamaño normal */
        opacity: 1; /* Completamente visible */
    }
}

</style>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Servicio.js"></script>
}