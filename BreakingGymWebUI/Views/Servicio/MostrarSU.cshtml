@model List<BreakingGymWebEN.ServicioEN>
@{
    ViewData["Title"] = "MostrarSU";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0 text-center">Servicios Disponibles</h2>
        </div>
        <div class="card-body">
            <div class="row">
                @if (Model != null && Model.Any())
                {
                    foreach (var servicio in Model)
                    {
                        <div class="col-md-3 mb-3">
                            <div class="card shadow-sm text-center" style="min-height: 180px;">
                                <div class="card-body">
                                    <h6 class="card-title">@servicio.Nombre</h6>
                                    <p class="card-text text-muted" style="font-size: 0.9rem;">
                                        @servicio.Descripcion
                                    </p>

                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center text-muted">
                        No hay servicios disponibles.
                    </div>
                }
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Servicio.js"></script>
}
