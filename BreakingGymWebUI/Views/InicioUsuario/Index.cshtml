
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Lusuario.cshtml";
}

<section class="home" id="home">
    <div class="home-content">
        <h1>Bienvenido a Breaking GYM</h1>

    </div>
</section>
<style>
    body {
        margin: 0;
        background-color: linear-gradient(135deg, rgba(0,0,0,0.7), rgba(0,0,0,0.4)), 
                url('/FT_DeSobreNosotros/hombre-gym.jpg') no-repeat center center fixed;;
    }

    .home {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 0;
        text-align: center;
        flex-direction: column;
        overflow: hidden;
    }
    .home-content {
        position: absolute;           
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  
    background: linear-gradient(
        45deg,                    
        transparent 30%,           
        rgba(255, 107, 53, 0.1) 50%,  
        transparent 70%            
    );
    animation: overlayShift 8s ease-in-out infinite;  /* Animación  */
    z-index: -1;                  
    }

    .home-content h1 {
        font-size: clamp(2.5rem, 8vw, 5rem);  
    font-weight: 900;              
    color: var(--text-light);      
    margin-bottom: 20px;          
    font-family: 'Orbitron', monospace;  
    letter-spacing: 4px;           
    text-transform: uppercase;     
   
    line-height: 1.1;             
        animation: zoomIn 1.5s ease forwards;
    }

    @@keyframes zoomIn {
        0% {
            transform: scale(0.7);
            opacity: 0;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>