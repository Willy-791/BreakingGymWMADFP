@model List<BreakingGymWebEN.InscripcionEN>
@{
    ViewData["Title"] = "BuscarInscripcion";
    Layout = "~/Views/Shared/Ladmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-search"></i> Buscar Inscripcion</h4>
            <a asp-action="MostrarInscripcion" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
        </div>
        <div class="card-body">
            <!-- Formulario de búsqueda -->
            <form asp-action="BuscarInscripcion" method="get" class="row g-3 mb-3">
                <div class="col-md-4">
                    <input type="text" name="celular" class="form-control" placeholder="Buscar por celular..." />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>

            <table class="table table-hover table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                         <th scope="col">Id</th>
                        <th scope="col">Id Usuario</th>
						<th scope="col">Nombre</th>
						<th scope="col">Apellido</th>
                        <th scope="col">Celular</th>
                        <th scope="col">Membresía</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Fecha Inscripción</th>
                        <th scope="col">Fecha Vencimiento</th>
                        <th scope="col">Acciones</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var inscripcion in Model)
                        {
                            <tr>
                                <td>@inscripcion.Id</td>
                                <td>@inscripcion.IdUsuario</td>
                                <td>@inscripcion.Nombre_Usuario</td>
                                <td>@inscripcion.Apellido_Usuario</td>
                                <td>@inscripcion.Celular</td>
                                <td>@inscripcion.Nombre_Membresia</td>
                                <td>@inscripcion.Nombre_Estado</td>
                                <td>@(inscripcion.FechaInscripcion?.ToString("dd/MM/yyyy") ?? "—")</td>
                                <td>@(inscripcion.FechaVencimiento?.ToString("dd/MM/yyyy") ?? "—")</td>
                                <td class="text-center">
                                    <a asp-action="ModificarInscripcion" asp-route-id="@inscripcion.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> Modificar
                                    </a>
                                    <a asp-action="EliminarInscripcion" asp-route-id="@inscripcion.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash-fill"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                No se encontraron resultados.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>