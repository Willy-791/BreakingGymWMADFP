@model BreakingGymWebEN.InscripcionEN

@{
    ViewData["Title"] = "EliminarInscripcion";
    Layout = "~/Views/Shared/Ladmin.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white text-center">
                    <h4><i class="bi bi-trash-fill"></i> Eliminar Inscripcion</h4>
                </div>
                <div class="card-body p-4 text-center">
                    <p class="fs-5">¿Está seguro que desea eliminar la siguiente Inscripcion?</p>

                    <ul class="list-group mb-4">
                        <li class="list-group-item"><strong>Id:</strong> @Model.Id</li>
                        <li class="list-group-item"><strong>Nombre:</strong> @Model.Nombre_Usuario</li>
                        <li class="list-group-item"><strong>Apellido:</strong> @Model.Apellido_Usuario</li>
                        <li class="list-group-item"><strong>Id Membresia:</strong> @Model.IdMembresia</li>
                        <li class="list-group-item"><strong>Membresia:</strong> @Model.Nombre_Membresia</li>
                        <li class="list-group-item"><strong>Fecha de Inscripcion/Inicio:</strong> @Model.FechaInscripcion</li>
                        <li class="list-group-item"><strong>Fecha de vencimiento:</strong> @Model.FechaVencimiento</li>

                    </ul>

                    <form asp-action="EliminarInscripcion" method="post" id="EliminarInscripcionForm">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </button>
                            <a asp-action="MostrarInscripcion" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


